<!-- views/books/edit.ejs -->

<h1>Edit Book</h1>
<form action="/books/<%= book._id %>?_method=PUT" method="POST">
  <label for="title">Title:</label>
  <input type="text" name="title" id="title" value="<%= book.title %>" required />

  <label for="author">Author:</label>
  <input type="text" name="author" id="author" value="<%= book.author %>" />

  <label for="isPublished">Published?</label>
  <input type="checkbox" name="isPublished" id="isPublished" <%= book.isPublished ? "checked" : "" %> />

  <button type="submit">Update Book</button>
</form>

<a href="/books/<%= book._id %>">Cancel</a>
